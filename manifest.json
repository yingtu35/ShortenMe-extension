{
  "manifest_version": 3,
  "name": "URL Shortener - ShortenMe",
  "version": "1.0.0",
  "description": "A simple URL shortener extension using ShortenMe API.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "ShortenMe"
  },
  "background": {
    "service_worker": "background.js"
  }
}